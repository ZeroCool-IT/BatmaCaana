<com.andexert.library.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rv_alpha="90"
    app:rv_color="@color/ripple_color"
    ripple:rv_centered="false">

    <ImageView
        android:id="@+id/listIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:alpha="54"
        android:contentDescription="@string/drawer_menu_icon"
        android:padding="8dp"
        android:src="@drawable/ic_about" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/listText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="72dp"
            android:layout_marginStart="72dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/dummy_text"
            android:textColor="@color/text87"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/activate_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listText"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="72dp"
            android:layout_marginStart="72dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/dummy_text"
            android:textColor="@android:color/holo_green_light"
            android:textSize="12sp" />
    </RelativeLayout>


</com.andexert.library.RippleView>
